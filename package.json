{
  "name": "app",
  "version": "1.0.0",
  "main": "postcss.config.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview --host",
    "tw:build": "tailwindcss -i ./public/assets/css/input.css -o ./public/assets/css/tailwind.css --content './public/**/*.{php,html,js}' --content './views/**/*.{php,html}' --minify",
    "tw:watch": "tailwindcss -i ./public/assets/css/input.css -o ./public/assets/css/tailwind.css --content './public/**/*.{php,html,js}' --content './views/**/*.{php,html}' --watch --minify",
    "tw:admin:build": "tailwindcss -i ./public/assets/admin/css/input.css -o ./public/assets/admin/css/tailwind.css --content './admin/**/*.{php,html,js}' --content './public/assets/admin/**/*.js' --minify",
    "tw:admin:watch": "tailwindcss -i ./public/assets/admin/css/input.css -o ./public/assets/admin/css/tailwind.css --content './admin/**/*.{php,html,js}' --content './public/assets/admin/**/*.js' --watch --minify",
    "tw:all:build": "npm run tw:build && npm run tw:admin:build",
    "tw:all:watch": "concurrently \"npm run tw:watch\" \"npm run tw:admin:watch\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.14",
    "@tailwindcss/vite": "^4.1.14",
    "concurrently": "^9.2.1",
    "tailwindcss": "^4.1.14",
    "vite": "^7.1.10"
  },
  "dependencies": {
    "gsap": "^3.13.0"
  }
}
